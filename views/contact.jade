extends layout

block content
  .container
    form(method='post', action='conatact/send')
      h1 Contact
      .form-group
        label Name
        input.form-control(type='text', name='name', placeholder='Enter name here')
      .form-group
        label Email
        input.form-control(type='email', name='email', placeholder='Enter email here')
      .form-group
        label Email
        textarea.form-control(name='message', placeholder='Enter Message here')
      buttton.btn.btn-default(type='submit') Submit
